{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "component",
      "repeatable": true,
      "component": "subtitle.project-subtitle",
      "required": true
    },
    "desc": {
      "type": "component",
      "repeatable": true,
      "component": "description.project-description",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "stack": {
      "type": "string",
      "required": true,
      "default": "Technology Used"
    },
    "stack_item": {
      "type": "component",
      "repeatable": true,
      "component": "technology-stack.project-stack",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "github": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    }
  }
}
